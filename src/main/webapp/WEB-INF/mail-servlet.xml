<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan
		base-package="com.facebook" />
	<bean id="empHiberDao" class="com.facebook.daos.EmployeeHiberDao"></bean>

	<bean id="std" class="com.facebook.pojo.Student">
		<constructor-arg value="Aurora" type="String"></constructor-arg>
		<property name="cites">
			<list>
				<value>Chennai</value>
				<value>Mumbai</value>
				<value>Delhi</value>
				<value>Kolkata</value>
				<value>Hyderabad</value>
				<value>Bangalore</value>
			</list>
		</property>
		<property name="ppt" ref="passport"></property>
	</bean>

	<bean id="passport" class="com.facebook.pojo.Passport"
		scope="prototype">
		<property name="city" value="Hyderabad"></property>
	</bean>

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/jsps/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
</beans>