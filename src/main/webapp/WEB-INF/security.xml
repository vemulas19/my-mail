<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">


	<http access-decision-manager-ref="accessDecisionManager" >
		<intercept-url pattern="/delete*" access="USER"/>
		<intercept-url pattern="/openInEdit*" access="ROLE_ABC"/>
		<form-login login-page="/gotoLoginPage" default-target-url="/home" authentication-failure-url="/gotoFailurePage" 
		username-parameter="mail"
		password-parameter="pwd"/>
		<logout logout-success-url="/home" />
		<!-- <http-basic/> -->
	</http>
	
